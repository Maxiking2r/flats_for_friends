<form class="form-inline">
        <%= form_tag flats_path, method: :get do %>
          <%= text_field_tag :separation_allowed,
            params[:separation_allowed],
            class: "form-control",
            placeholder: "To what degree do you want to know the host"
          %>
          <%= text_field_tag :location,
            params[:location],
            class: "form-control",
            placeholder: "Where do you want to move to ?"
          %>
          <%= submit_tag "Search", class: "btn btn-rounded" %>
        <% end %>
</form>

<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Flatpickr Demo</h2>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
