<div class="container pt-4">
  <h2>Your Booking ðŸ’Œ</h2>
</div>

<br>

<div class="container-fluid d-flex">
<div class="col-6">
  <div class="card-flat">
    <ul>
        <li> Name: <%= @booking.flat.name %></li>
        <li> Start Date: <%= @booking.start_date %>
          <br> End Date: <%= @booking.end_date %></li>
        <li> Type: <%= @booking.flat.flat_type %></li>
        <li> Capacity: <%= @booking.flat.number_of_rooms %> rooms</li>
        <li> Description: <%= @booking.flat.description %></li>
    </ul>
  </div>
  <div class="card-flat">
    <div class="overlay__content">
      <span class="spinner"></span>
    </div>
    <% if current_user.id == @booking.flat.user_id %>

      <%= link_to "Accept", accepted_flat_path(@booking), method: :patch %>
      <%= link_to "Decline", declined_flat_path(@booking), method: :patch %>

      <% else %>
        <%= @booking.confirmed %>
    <% end %>
  </div>
</div>

