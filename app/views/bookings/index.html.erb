<div class="container">
  <h1>Overview of all your Bookings</h1>
</div>
<br>

<div class="container-fluid d-flex">
  <div class="col-6">
    <div class="card-flat">
    <h2>My planned Bookings ğŸ›Œ</h2>

      <ul>
        <% @bookings_as_renter.each do |booking| %>
          <li> Name: <%= booking.flat.name %></li>
          <li> Start Date: <%= booking.start_date %> | End Date: <%= booking.end_date %></li>
          <li> Status: <%= booking.confirmed %></li>
          <li> <%= link_to "#{booking.flat.name}", booking_path(booking)%></li>
        <% end %>
      </ul>

    </div>
  </div>

  <div class="col-6">
    <div class="card-flat">
    <h2>Planned renting-outs ğŸ›</h2>

      <ul>
        <% @bookings_as_owner.each do |booking| %>
          <li> Name: <%= booking.flat.name %></li>
          <li> Start Date: <%= booking.start_date %> | End Date: <%= booking.end_date %></li>
          <li> Status: <%= booking.confirmed %></li>
          <li> <%= link_to "#{booking.flat.name}", booking_path(booking)%></li>
          <%= link_to "Accept", accepted_booking_path(booking), method: :patch %>
          <%= link_to "Decline", declined_booking_path(booking), method: :patch %>
        <% end %>
      </ul>

    </div>
  </div>

</div>
