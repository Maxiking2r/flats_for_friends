<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class=d-flex>
  <%= form_tag flats_path, method: :get do %>
    <%= text_field_tag :separation_allowed,
      params[:separation_allowed],
      class: "form-control",
      placeholder: "To what degree do you want to know the host"
    %>
    <%= text_field_tag :location,
      params[:location],
      class: "form-control",
      placeholder: "Where do you want to move to ?"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
