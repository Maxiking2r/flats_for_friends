<div class="container pt-4">
  <h2>Your Booking ðŸ’Œ</h2>
</div>

<br>

<div class="container-fluid d-flex">
  <div class="col-6">
    <div>
      <% if @booking.flat.photos.first %>
      <%= cl_image_tag @booking.flat.photos.first.key, height: 300, width: 400, crop: :fill %>
      <% end %>
    </div>
    <div class="card-flat">
        <h2> <%= @booking.flat.name %></h2>
        <p> <strong>Start Date:</strong> <%= @booking.start_date %>
          <br> <strong>End Date:</strong> <%= @booking.end_date %></p>
        <p> <strong>Type:</strong> <%= @booking.flat.flat_type %></p>
        <p> <strong>Capacity:</strong> <%= @booking.flat.number_of_rooms %> rooms</p>
        <p> <strong>Description:</strong> <%= @booking.flat.description %></p>
    </div>

  <br>

    <div class="card-flat">
      <div class="overlay__content">
<!--         <span class="spinner"></span>
 -->  </div>
      <% if current_user.id == @booking.flat.user_id %>

        <%= link_to "Accept", booking_path(@booking, booking: { confirmed: "confirmed" }), method: :patch, class: "btn btn-squared:hover" %>
        <%= link_to "Decline", booking_path(@booking, booking: { confirmed: "declined" }), method: :patch, class: "btn btn-squared:hover" %>

        <% else %>
          <%= @booking.confirmed %>
      <% end %>
    </div>
  </div>
<!-- <img id="booking-pic" src="https://images.unsplash.com/photo-1534120247760-c44c3e4a62f1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60"> -->
  <div class="col-6">
    <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
  </div>
</div>
